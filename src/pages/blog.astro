<script>
  // Client-side pagination
  const POSTS_PER_PAGE = 15;
  const totalPosts = document.querySelectorAll('.blog-post-item').length;
  const totalPages = Math.ceil(totalPosts / POSTS_PER_PAGE);
  let currentPage = 1;

  // Get all elements
  const blogPosts = document.querySelectorAll('.blog-post-item');
  const prevBtnTop = document.getElementById('prev-btn-top');
  const nextBtnTop = document.getElementById('next-btn-top');
  const prevBtnBottom = document.getElementById('prev-btn-bottom');
  const nextBtnBottom = document.getElementById('next-btn-bottom');
  const pageInfoTop = document.getElementById('page-info-top');
  const pageInfoBottom = document.getElementById('page-info-bottom');

  function showPage(page) {
    // Hide all posts
    blogPosts.forEach(post => {
      post.classList.add('hidden');
    });

    // Show posts for current page
    const startIndex = (page - 1) * POSTS_PER_PAGE;
    const endIndex = startIndex + POSTS_PER_PAGE;
    
    for (let i = startIndex; i < endIndex && i < totalPosts; i++) {
      blogPosts[i].classList.remove('hidden');
    }

    // Update page info
    pageInfoTop.textContent = `Page ${page} of ${totalPages}`;
    pageInfoBottom.textContent = `Page ${page} of ${totalPages}`;

    // Update button states
    updateButtonStates(page);

    // Scroll to top of blog section
    document.getElementById('blog-posts-container').scrollIntoView({ 
      behavior: 'smooth',
      block: 'start'
    });
  }

  function updateButtonStates(page) {
    // Previous buttons
    if (page === 1) {
      prevBtnTop.disabled = true;
      prevBtnBottom.disabled = true;
      prevBtnTop.className = 'px-4 py-2 bg-gray-700 text-gray-500 rounded-lg font-orbitron cursor-not-allowed';
      prevBtnBottom.className = 'px-4 py-2 bg-gray-700 text-gray-500 rounded-lg font-orbitron cursor-not-allowed';
    } else {
      prevBtnTop.disabled = false;
      prevBtnBottom.disabled = false;
      prevBtnTop.className = 'px-4 py-2 bg-primary text-black hover:bg-primary/80 transition-all duration-300 rounded-lg font-orbitron font-bold';
      prevBtnBottom.className = 'px-4 py-2 bg-primary text-black hover:bg-primary/80 transition-all duration-300 rounded-lg font-orbitron font-bold';
    }

    // Next buttons
    if (page === totalPages) {
      nextBtnTop.disabled = true;
      nextBtnBottom.disabled = true;
      nextBtnTop.className = 'px-4 py-2 bg-gray-700 text-gray-500 rounded-lg font-orbitron cursor-not-allowed';
      nextBtnBottom.className = 'px-4 py-2 bg-gray-700 text-gray-500 rounded-lg font-orbitron cursor-not-allowed';
    } else {
      nextBtnTop.disabled = false;
      nextBtnBottom.disabled = false;
      nextBtnTop.className = 'px-4 py-2 bg-primary text-black hover:bg-primary/80 transition-all duration-300 rounded-lg font-orbitron font-bold';
      nextBtnBottom.className = 'px-4 py-2 bg-primary text-black hover:bg-primary/80 transition-all duration-300 rounded-lg font-orbitron font-bold';
    }
  }

  // Event listeners
  prevBtnTop.addEventListener('click', () => {
    if (currentPage > 1) {
      currentPage--;
      showPage(currentPage);
    }
  });

  nextBtnTop.addEventListener('click', () => {
    if (currentPage < totalPages) {
      currentPage++;
      showPage(currentPage);
    }
  });

  prevBtnBottom.addEventListener('click', () => {
    if (currentPage > 1) {
      currentPage--;
      showPage(currentPage);
    }
  });

  nextBtnBottom.addEventListener('click', () => {
    if (currentPage < totalPages) {
      currentPage++;
      showPage(currentPage);
    }
  });

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    showPage(1);
  });
</script>