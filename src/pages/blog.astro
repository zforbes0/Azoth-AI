---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import WireframeBackground from '../components/WireframeBackground.astro';

const categories = ["All", "AI & Automation", "Development", "Business Strategy", "Technical", "Security", "Machine Learning"];
---

<Layout title="Blog - Azoth Automations">
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[60vh] flex items-center justify-center wireframe-bg overflow-hidden">
      <WireframeBackground />
      <div class="relative z-10 max-w-7xl mx-auto px-6 py-32 text-center">
        <div class="animate-slide-up">
          <p class="text-primary font-orbitron text-sm tracking-wider mb-4 matrix-text-shadow">
            INSIGHTS & EXPERTISE
          </p>
          <h1 class="text-4xl md:text-6xl font-orbitron font-bold mb-6 text-white">
            Automation <span class="text-primary">Intelligence</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-300 max-w-4xl mx-auto mb-12 leading-relaxed">
            Discover the latest trends, strategies, and innovations in business automation, 
            AI implementation, and digital transformation.
          </p>
        </div>
      </div>
    </section>

    <!-- Categories Filter -->
    <section class="py-12 bg-black border-t border-primary/30">
      <div class="max-w-7xl mx-auto px-6">
        <div class="flex flex-wrap justify-center gap-4 mb-8">
          {categories.map((category) => (
            <button class="border-primary/30 text-gray-300 hover:border-primary hover:text-primary hover:bg-primary/10 transition-all duration-300 px-4 py-2 border rounded">
              {category}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Posts -->
    <section class="py-16 bg-black">
      <div class="max-w-7xl mx-auto px-6">
        <h2 class="text-3xl font-orbitron font-bold text-primary mb-12 text-center">
          Featured Articles
        </h2>
        <div class="grid md:grid-cols-2 gap-8 mb-16">
          <!-- Featured Post 1 -->
          <article class="glass-morphism rounded-2xl overflow-hidden hover:border-primary/50 transition-all duration-300 group cursor-pointer">
            <div class="p-8">
              <div class="flex items-center gap-4 mb-4">
                <span class="bg-primary/20 text-primary px-3 py-1 rounded-full text-sm font-orbitron">
                  AI & Automation
                </span>
                <span class="text-gray-400 text-sm">Featured</span>
              </div>
              
              <h3 class="text-2xl font-orbitron font-bold text-white mb-4 group-hover:text-primary transition-colors duration-300">
                The Future of Business Automation: AI-Driven Process Optimization
              </h3>
              
              <p class="text-gray-300 leading-relaxed mb-6">
                Discover how artificial intelligence is revolutionizing business processes, reducing costs by up to 80%, and creating new opportunities for competitive advantage in the digital age.
              </p>
              
              <div class="flex items-center justify-between text-sm text-gray-400 mb-6">
                <div class="flex items-center gap-4">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
                    </svg>
                    January 15, 2024
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
                      <path d="M12.5 7H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                    </svg>
                    8 min read
                  </span>
                </div>
                <span>By Dr. Sarah Chen</span>
              </div>
              
              <div class="flex flex-wrap gap-2 mb-6">
                <span class="flex items-center gap-1 text-xs bg-black/50 text-gray-300 px-2 py-1 rounded">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M5.5 7A1.5 1.5 0 0 1 4 5.5A1.5 1.5 0 0 1 5.5 4A1.5 1.5 0 0 1 7 5.5A1.5 1.5 0 0 1 5.5 7zM21.41 11.58l-9-9C12.05 2.22 11.55 2 11 2H4c-1.1 0-2 .9-2 2v7c0 .55.22 1.05.59 1.42l9 9c.36.36.86.58 1.41.58s1.05-.22 1.41-.59l7-7c.37-.36.59-.86.59-1.41s-.23-1.06-.59-1.42z"/>
                  </svg>
                  AI
                </span>
                <span class="flex items-center gap-1 text-xs bg-black/50 text-gray-300 px-2 py-1 rounded">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M5.5 7A1.5 1.5 0 0 1 4 5.5A1.5 1.5 0 0 1 5.5 4A1.5 1.5 0 0 1 7 5.5A1.5 1.5 0 0 1 5.5 7zM21.41 11.58l-9-9C12.05 2.22 11.55 2 11 2H4c-1.1 0-2 .9-2 2v7c0 .55.22 1.05.59 1.42l9 9c.36.36.86.58 1.41.58s1.05-.22 1.41-.59l7-7c.37-.36.59-.86.59-1.41s-.23-1.06-.59-1.42z"/>
                  </svg>
                  ROI
                </span>
              </div>
              
              <button class="w-full bg-primary text-black hover:bg-primary/80 transition-all duration-300 group-hover:scale-105 px-4 py-3 rounded font-bold">
                Read Full Article
                <svg class="ml-2 w-4 h-4 inline" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8.59 16.59L10 18l6-6-6-6-1.41 1.41L13.17 12l-4.58 4.59z"/>
                </svg>
              </button>
            </div>
          </article>

          <!-- Featured Post 2 -->
          <article class="glass-morphism rounded-2xl overflow-hidden hover:border-primary/50 transition-all duration-300 group cursor-pointer">
            <div class="p-8">
              <div class="flex items-center gap-4 mb-4">
                <span class="bg-primary/20 text-primary px-3 py-1 rounded-full text-sm font-orbitron">
                  Development
                </span>
                <span class="text-gray-400 text-sm">Featured</span>
              </div>
              
              <h3 class="text-2xl font-orbitron font-bold text-white mb-4 group-hover:text-primary transition-colors duration-300">
                Custom Software Development: From Concept to Implementation
              </h3>
              
              <p class="text-gray-300 leading-relaxed mb-6">
                A comprehensive guide to building scalable software solutions that grow with your business. Learn our proven methodology for delivering enterprise-grade applications.
              </p>
              
              <div class="flex items-center justify-between text-sm text-gray-400 mb-6">
                <div class="flex items-center gap-4">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
                    </svg>
                    January 12, 2024
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
                      <path d="M12.5 7H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                    </svg>
                    12 min read
                  </span>
                </div>
                <span>By Michael Rodriguez</span>
              </div>
              
              <div class="flex flex-wrap gap-2 mb-6">
                <span class="flex items-center gap-1 text-xs bg-black/50 text-gray-300 px-2 py-1 rounded">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M5.5 7A1.5 1.5 0 0 1 4 5.5A1.5 1.5 0 0 1 5.5 4A1.5 1.5 0 0 1 7 5.5A1.5 1.5 0 0 1 5.5 7zM21.41 11.58l-9-9C12.05 2.22 11.55 2 11 2H4c-1.1 0-2 .9-2 2v7c0 .55.22 1.05.59 1.42l9 9c.36.36.86.58 1.41.58s1.05-.22 1.41-.59l7-7c.37-.36.59-.86.59-1.41s-.23-1.06-.59-1.42z"/>
                  </svg>
                  Enterprise
                </span>
                <span class="flex items-center gap-1 text-xs bg-black/50 text-gray-300 px-2 py-1 rounded">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M5.5 7A1.5 1.5 0 0 1 4 5.5A1.5 1.5 0 0 1 5.5 4A1.5 1.5 0 0 1 7 5.5A1.5 1.5 0 0 1 5.5 7zM21.41 11.58l-9-9C12.05 2.22 11.55 2 11 2H4c-1.1 0-2 .9-2 2v7c0 .55.22 1.05.59 1.42l9 9c.36.36.86.58 1.41.58s1.05-.22 1.41-.59l7-7c.37-.36.59-.86.59-1.41s-.23-1.06-.59-1.42z"/>
                  </svg>
                  Scalability
                </span>
              </div>
              
              <button class="w-full bg-primary text-black hover:bg-primary/80 transition-all duration-300 group-hover:scale-105 px-4 py-3 rounded font-bold">
                Read Full Article
                <svg class="ml-2 w-4 h-4 inline" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8.59 16.59L10 18l6-6-6-6-1.41 1.41L13.17 12l-4.58 4.59z"/>
                </svg>
              </button>
            </div>
          </article>
        </div>
      </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-16 bg-black border-t border-primary/30">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <div class="glass-morphism p-10 rounded-2xl">
          <h2 class="text-3xl font-orbitron font-bold text-primary mb-4">
            Stay Updated
          </h2>
          <p class="text-gray-300 mb-8 leading-relaxed">
            Get the latest insights on automation, AI, and digital transformation 
            delivered directly to your inbox. Join thousands of forward-thinking business leaders.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <input
              type="email"
              placeholder="Enter your email"
              class="flex-1 bg-black/50 border border-primary/30 text-white placeholder-gray-400 px-4 py-3 rounded-lg focus:border-primary focus:outline-none"
            />
            <button class="bg-primary text-black hover:bg-primary/80 transition-all duration-300 px-8 py-3 rounded font-bold">
              Subscribe
            </button>
          </div>
          <p class="text-xs text-gray-400 mt-4">
            No spam. Unsubscribe at any time.
          </p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>