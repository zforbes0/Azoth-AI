---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import WireframeBackground from '../components/WireframeBackground.astro';

const categories = ["All", "AI Document Management", "AI Customer Support Automation"];

const pillarPages = [
  {
    title: "AI Document Management System",
    url: "/blog/ai-document-management-system",
    category: "AI Document Management",
    description: "Intelligent retrieval and organization solutions for enterprise document management"
  },
  {
    title: "AI Customer Support Automation Services", 
    url: "/blog/ai-customer-support-automation",
    category: "AI Customer Support Automation",
    description: "24/7 scalable customer support solutions powered by artificial intelligence"
  }
];

const blogPosts = [
  {
    title: "RAG AI Document Retrieval: How Retrieval-Augmented Generation Transforms Knowledge Access",
    url: "/blog/rag-ai-document-retrieval",
    category: "AI Document Management",
    excerpt: "Discover how RAG technology revolutionizes document search and retrieval processes with contextual understanding.",
    author: "Dr. Sarah Chen",
    date: "2025-01-15",
    readTime: "12 min read",
    tags: ["RAG", "Document Retrieval", "AI"]
  },
  {
    title: "Intelligent Document Retrieval Software: Features to Look For in 2025",
    url: "/blog/intelligent-document-retrieval-software",
    category: "AI Document Management",
    excerpt: "Essential capabilities and advanced features that define cutting-edge document retrieval systems.",
    author: "Michael Rodriguez",
    date: "2025-01-12",
    readTime: "10 min read",
    tags: ["Software Features", "Enterprise", "2025 Trends"]
  },
  {
    title: "AI-Powered Document Classification: Automating Compliance & Organization",
    url: "/blog/ai-powered-document-classification",
    category: "AI Document Management",
    excerpt: "Learn how AI automates document classification while ensuring regulatory compliance and organizational efficiency.",
    author: "Jennifer Park",
    date: "2025-01-10",
    readTime: "11 min read",
    tags: ["Classification", "Compliance", "Automation"]
  },
  {
    title: "Enterprise Knowledge Management Solutions: The Role of AI",
    url: "/blog/enterprise-knowledge-management-solutions",
    category: "AI Document Management",
    excerpt: "How AI transforms enterprise knowledge management from static repositories into dynamic intelligence systems.",
    author: "David Kim",
    date: "2025-01-08",
    readTime: "13 min read",
    tags: ["Knowledge Management", "Enterprise AI", "Innovation"]
  },
  {
    title: "How Intelligent Workflow Automation Boosts Document Efficiency",
    url: "/blog/intelligent-workflow-automation",
    category: "AI Document Management",
    excerpt: "Discover how AI-powered workflow automation transforms document processes and eliminates operational bottlenecks.",
    author: "Alex Thompson",
    date: "2025-01-05",
    readTime: "9 min read",
    tags: ["Workflow Automation", "Process Optimization", "Efficiency"]
  }
];
---

<Layout title="Blog - Azoth Automations">
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[60vh] flex items-center justify-center wireframe-bg overflow-hidden">
      <WireframeBackground />
      <div class="relative z-10 max-w-7xl mx-auto px-6 py-32 text-center">
        <div class="animate-slide-up">
          <p class="text-primary font-orbitron text-sm tracking-wider mb-4 matrix-text-shadow">
            INSIGHTS & EXPERTISE
          </p>
          <h1 class="text-4xl md:text-6xl font-orbitron font-bold mb-6 text-white">
            Automation <span class="text-primary">Intelligence</span>
          </h1>
          <p class="text-xl md:text-2xl text-white max-w-4xl mx-auto mb-12 leading-relaxed">
            Discover the latest trends, strategies, and innovations in business automation, 
            AI implementation, and digital transformation.
          </p>
        </div>
      </div>
    </section>

    <!-- Pillar Categories -->
    <section class="py-12 bg-black border-t border-primary">
      <div class="max-w-7xl mx-auto px-6">
        <h2 class="text-2xl font-orbitron font-bold text-white mb-8 text-center">
          Our Content Pillars
        </h2>
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          {pillarPages.map((pillar) => (
            <a href={pillar.url} class="glass-morphism p-8 rounded-xl hover:border-primary transition-all duration-300 group block">
              <div class="flex items-center gap-4 mb-4">
                <span class="bg-primary/80 text-primary px-3 py-1 rounded-full text-sm font-orbitron">
                  {pillar.category}
                </span>
                <span class="text-white text-sm">Pillar Page</span>
              </div>
              <h3 class="text-xl font-orbitron font-bold text-white mb-3 group-hover:text-primary transition-colors duration-300">
                {pillar.title}
              </h3>
              <p class="text-white leading-relaxed">
                {pillar.description}
              </p>
            </a>
          ))}
        </div>
        
        <div class="flex flex-wrap justify-center gap-4">
          {categories.map((category) => (
            <button class="border-primary text-white hover:border-primary hover:text-primary hover:bg-primary/80 transition-all duration-300 px-4 py-2 border rounded">
              {category}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- All Blog Posts -->
    <section class="py-16 bg-black">
      <div class="max-w-7xl mx-auto px-6">
        <h2 class="text-3xl font-orbitron font-bold text-primary mb-12 text-center">
          Latest Articles
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {blogPosts.map((post) => (
            <a href={post.url} class="glass-morphism rounded-xl overflow-hidden hover:border-primary transition-all duration-300 group block">
              <div class="p-6">
                <div class="flex items-center gap-4 mb-4">
                  <span class="bg-primary/80 text-primary px-3 py-1 rounded-full text-sm font-orbitron">
                    {post.category}
                  </span>
                </div>
                
                <h3 class="text-lg font-orbitron font-bold text-white mb-3 group-hover:text-primary transition-colors duration-300 line-clamp-2">
                  {post.title}
                </h3>
                
                <p class="text-white leading-relaxed mb-4 text-sm line-clamp-3">
                  {post.excerpt}
                </p>
                
                <div class="flex items-center justify-between text-xs text-white mb-4">
                  <div class="flex items-center gap-3">
                    <span class="flex items-center gap-1">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
                      </svg>
                      {new Date(post.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                    </span>
                    <span class="flex items-center gap-1">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
                        <path d="M12.5 7H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                      </svg>
                      {post.readTime}
                    </span>
                  </div>
                </div>
                
                <div class="flex flex-wrap gap-1 mb-4">
                  {post.tags.slice(0, 2).map((tag) => (
                    <span class="text-xs bg-black/90 text-white px-2 py-1 rounded">
                      {tag}
                    </span>
                  ))}
                </div>
                
                <div class="text-primary font-semibold text-sm group-hover:text-white transition-colors duration-300">
                  Read Article â†’
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-16 bg-black border-t border-primary">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <div class="glass-morphism p-10 rounded-2xl">
          <h2 class="text-3xl font-orbitron font-bold text-primary mb-4">
            Stay Updated
          </h2>
          <p class="text-white mb-8 leading-relaxed">
            Get the latest insights on automation, AI, and digital transformation 
            delivered directly to your inbox. Join thousands of forward-thinking business leaders.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <input
              type="email"
              placeholder="Enter your email"
              class="flex-1 bg-black/90 border border-primary text-white placeholder-gray-400 px-4 py-3 rounded-lg focus:border-primary focus:outline-none"
            />
            <button class="bg-primary text-black hover:bg-primary/80 transition-all duration-300 px-8 py-3 rounded font-bold">
              Subscribe
            </button>
          </div>
          <p class="text-xs text-white mt-4">
            No spam. Unsubscribe at any time.
          </p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>