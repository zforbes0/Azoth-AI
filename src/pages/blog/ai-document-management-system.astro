<Layout title="AI Document Management System – Intelligent Retrieval & Organization for Business">
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[60vh] flex items-center justify-center wireframe-bg overflow-hidden pt-20">
      <WireframeBackground />
      <div class="relative z-10 max-w-7xl mx-auto px-6 py-16 text-center">
        <div class="animate-slide-up">
          <div class="bg-primary/20 border-2 border-primary px-4 py-2 rounded-full inline-block mb-6">
            <p class="text-primary font-orbitron text-sm tracking-wider font-bold">
              🤖 ENTERPRISE AI SOLUTIONS
            </p>
          </div>
          <h1 class="text-4xl md:text-5xl font-orbitron font-bold mb-6 text-white">
            AI Document Management System – Intelligent <span class="text-primary">Retrieval & Organization</span> for Business
          </h1>
          <p class="text-xl text-white max-w-5xl mx-auto mb-12 leading-relaxed">
            Transform how your organization manages, retrieves, and organizes documents with cutting-edge artificial intelligence technology.
          </p>
        </div>
      </div>
    </section>

    <!-- Main Content Area with Right Panel -->
