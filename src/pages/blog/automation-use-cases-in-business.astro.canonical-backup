<script>
  // Related articles data
  const articles = [
    {
      title: "AI Automation for Event Management: From Registration to Follow-Up",
      url: "/blog/ai-automation-for-event-management",
      excerpt: "Comprehensive automation solutions for event registration and attendee management",
      readTime: "14 min read",
      date: "Jan 20"
    },
    {
      title: "AI Automation for HR Onboarding & Employee Training",
      url: "/blog/ai-automation-for-hr-onboarding", 
      excerpt: "Streamline HR processes with intelligent onboarding automation",
      readTime: "12 min read",
      date: "Jan 18"
    },
    {
      title: "AI Automation for Real Estate Marketing & Lead Management",
      url: "/blog/ai-automation-for-real-estate-marketing",
      excerpt: "Advanced real estate automation for lead nurturing and property marketing",
      readTime: "13 min read",
      date: "Jan 16"
    },
    {
      title: "AI Automation in Healthcare Administration: Improving Patient Data Flow",
      url: "/blog/ai-automation-in-healthcare-administration",
      excerpt: "Healthcare automation solutions for patient data management and workflow optimization",
      readTime: "15 min read",
      date: "Jan 14"
    },
    {
      title: "AI Automation for Legal Industry: Streamlining Case File Management",
      url: "/blog/ai-automation-for-legal-industry",
      excerpt: "Legal automation solutions for case management and document processing",
      readTime: "11 min read",
      date: "Jan 12"
    }
  ];

  let currentPage = 0;
  const articlesPerPage = 8;
  const totalPages = Math.ceil(articles.length / articlesPerPage);

  function renderArticles() {
    const container = document.getElementById('blog-articles-container');
    if (!container) return;
    
    const start = currentPage * articlesPerPage;
    const end = start + articlesPerPage;
    const pageArticles = articles.slice(start, end);
    
    container.innerHTML = pageArticles.map(article => `
      <a href="${article.url}" class="block p-4 bg-black/30 border border-primary/20 rounded-lg hover:bg-primary/10 hover:border-primary/40 transition-all duration-300 group">
        <div class="flex items-center gap-2 mb-2">
          <span class="text-primary text-xs">${article.date}</span>
          <span class="text-gray-500 text-xs">•</span>
          <span class="text-gray-300 text-xs">${article.readTime}</span>
        </div>
        <h4 class="font-orbitron font-bold text-white text-sm mb-2 group-hover:text-primary transition-colors duration-300 line-clamp-2">
          ${article.title}
        </h4>
        <p class="text-gray-300 text-xs line-clamp-2">${article.excerpt}</p>
      </a>
    `).join('');
    
    // Update pagination info
    const pageIndicator = document.getElementById('page-indicator');
    if (pageIndicator) {
      pageIndicator.textContent = `${currentPage + 1} of ${totalPages}`;
    }
    
    // Update button states
    const prevBtn = document.getElementById('prev-page');
    const nextBtn = document.getElementById('next-page');
    
    if (prevBtn) prevBtn.disabled = currentPage === 0;
    if (nextBtn) nextBtn.disabled = currentPage === totalPages - 1;
  }

  // Initialize pagination
  document.addEventListener('DOMContentLoaded', function() {
    renderArticles();
    
    const prevBtn = document.getElementById('prev-page');
    const nextBtn = document.getElementById('next-page');
    
    if (prevBtn) {
      prevBtn.addEventListener('click', function() {
        if (currentPage > 0) {
          currentPage--;
          renderArticles();
        }
      });
    }
    
    if (nextBtn) {
      nextBtn.addEventListener('click', function() {
        if (currentPage < totalPages - 1) {
          currentPage++;
          renderArticles();
        }
      });
    }
  });
</script>

