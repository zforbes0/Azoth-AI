---
import Layout from '../layouts/Layout.astro';
import SuccessStories from '../components/SuccessStories.astro';
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';
import WireframeBackground from '../components/WireframeBackground.astro';
---

<Layout title="Portfolio - Azoth Automations">
  <WireframeBackground />
  <main class="pt-20">
    <div class="relative min-h-[40vh] flex items-center justify-center">
      <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
        <h1 class="text-6xl md:text-7xl font-orbitron font-black text-white mb-6">
          Our <span class="text-primary">Portfolio</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
          Real automation success stories that transformed operations and accelerated growth
        </p>
      </div>
    </div>
    
    <SuccessStories />
    <ContactSection />
  </main>
  <Footer />
</Layout>