---
// Static Navigation component - minimal interactivity
import { Image } from 'astro:assets';
---

<nav class="fixed top-0 w-full z-[9999] glass-morphism-dark" style="z-index: 999999 !important; position: fixed !important;">
  <div class="max-w-7xl mx-auto px-4" style="padding-top: 3px; padding-bottom: 3px;">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center">
        <Image 
          src="/assets/NEXITAS circle.png" 
          alt="Nexitas" 
          width={60}
          height={60}
          class="w-auto" style="height: 60px;"
        />
      </a>

      <!-- Desktop Navigation - Static -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="/"
          class="hover:text-primary transition-colors duration-300"
        >
          SERVICES
        </a>
        <a
          href="/portfolio"
          class="hover:text-primary transition-colors duration-300"
        >
          PORTFOLIO
        </a>
        <a
          href="/blog"
          class="hover:text-primary transition-colors duration-300"
        >
          BLOG
        </a>
        <a
          href="/#contact"
          class="bg-primary text-black px-6 py-2 rounded-lg font-semibold hover:bg-primary/80 transition-all duration-300 animate-glow"
        >
          Contact Us
        </a>
      </div>

      <!-- Mobile Menu Button - Only interactive part -->
      <button
        class="md:hidden text-primary mobile-menu-toggle"
        type="button"
      >
        <svg class="w-6 h-6 menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg class="w-6 h-6 close-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu - Hidden by default -->
    <div class="md:hidden mt-4 glass-morphism rounded-lg p-4 mobile-menu hidden">
      <div class="flex flex-col space-y-4">
        <a
          href="/"
          class="text-left hover:text-primary transition-colors duration-300"
        >
          SERVICES
        </a>
        <a
          href="/portfolio"
          class="text-left hover:text-primary transition-colors duration-300"
        >
          PORTFOLIO
        </a>
        <a
          href="/blog"
          class="text-left hover:text-primary transition-colors duration-300"
        >
          BLOG
        </a>
        <a
          href="/#contact"
          class="bg-primary text-black font-semibold hover:bg-primary/80 transition-all duration-300 px-4 py-2 rounded text-left"
        >
          Contact Us
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Minimal JavaScript for mobile menu toggle only
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.querySelector('.mobile-menu-toggle');
    const menu = document.querySelector('.mobile-menu');
    const menuIcon = document.querySelector('.menu-icon');
    const closeIcon = document.querySelector('.close-icon');
    
    toggle?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
      menuIcon?.classList.toggle('hidden');
      closeIcon?.classList.toggle('hidden');
    });

    // Close mobile menu when clicking on links
    const mobileLinks = document.querySelectorAll('.mobile-menu a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        menu?.classList.add('hidden');
        menuIcon?.classList.remove('hidden');
        closeIcon?.classList.add('hidden');
      });
    });
  });
</script>