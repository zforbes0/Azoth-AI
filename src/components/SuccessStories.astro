---
// Success Stories component - converted from React

const caseStudies = [
  {
    title: "GlobalTech Manufacturing",
    subtitle: "Complete Production Line Automation Reduces Costs by 60%",
    description: "Azoth AI completely revolutionized our certification system for AL2A certifications. If a client needs certifications for all their calibrated equipment, it's now the push of a button away, saving us time while maintaining a professional quality!",
    metrics: "85% Efficiency Increase",
    category: "Manufacturing Process Automation",
    tags: ["Industrial IoT", "Predictive Maintenance", "Real-time Analytics"],
    image: "https://images.unsplash.com/photo-1581092921461-eab62e97a780?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&h=600"
  },
  {
    title: "FinanceFlow Corp",
    subtitle: "AI-Powered Document Processing Saves 500+ Hours Monthly",
    description: "Our intelligent document automation system transformed FinanceFlow's manual data entry processes. Using advanced OCR, machine learning, and natural language processing, we created a solution that automatically extracts, validates, and processes financial documents with 99.7% accuracy.",
    metrics: "99.7% Accuracy Rate",
    category: "Document Processing Automation",
    tags: ["Document AI", "OCR Technology", "Workflow Automation"],
    image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&h=600",
    reverse: true
  },
  {
    title: "RetailTech Solutions",
    subtitle: "Complete E-commerce Automation Handles 10x Order Volume",
    description: "RetailTech's rapid growth was bottlenecked by manual processes. We implemented comprehensive automation covering inventory management, order processing, customer service, and fulfillment. The result: seamless scaling to handle massive order volumes during peak seasons without additional staff.",
    metrics: "300% Order Volume Increase",
    category: "E-commerce Platform Automation",
    tags: ["Inventory Management", "Order Automation", "CRM Integration"],
    image: "https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&h=600"
  }
];
---

<section id="portfolio" class="relative pt-16 pb-32 mt-[-121px] mb-[-121px]">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-20">
      <h2 class="text-5xl md:text-6xl font-orbitron font-black text-white mb-6">
        Efficiency + Intelligence + <span class="text-primary matrix-text-shadow">ROI: Delivered</span>
      </h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Real automation success stories that transformed operations and accelerated growth
      </p>
    </div>

    <div class="space-y-16">
      {caseStudies.map((study, index) => (
        <div class="glass-morphism rounded-2xl overflow-hidden">
          <div class={`grid md:grid-cols-2 gap-0 ${study.reverse ? 'md:grid-flow-col-dense' : ''}`}>
            <div class={`relative ${study.reverse ? 'md:order-2' : ''}`}>
              <img
                src={study.image}
                alt={study.category}
                class="w-full h-full object-cover min-h-[400px]"
              />
              <div class={`absolute inset-0 bg-gradient-to-r ${study.reverse ? 'from-transparent to-primary/20' : 'from-primary/20 to-transparent'}`}></div>
              <div class={`absolute bottom-6 ${study.reverse ? 'right-6 text-right' : 'left-6'} text-white`}>
                <div class="bg-primary text-black px-4 py-2 rounded-lg font-orbitron font-bold text-sm mb-2">
                  {study.metrics}
                </div>
                <div class="bg-black/50 backdrop-blur-sm px-4 py-2 rounded-lg">
                  {study.category}
                </div>
              </div>
            </div>

            <div class={`p-12 ${study.reverse ? 'md:order-1' : ''}`}>
              <h3 class="text-3xl font-orbitron font-bold text-primary mb-4">
                {study.title}
              </h3>
              <h4 class="text-xl font-semibold text-white mb-6">
                {study.subtitle}
              </h4>
              <p class="text-gray-300 mb-8 leading-relaxed">
                {study.description}
              </p>
              <div class="flex flex-wrap gap-4 mb-8">
                {study.tags.map((tag, tagIndex) => (
                  <span
                    class="bg-primary/20 text-primary px-3 py-1 rounded-lg text-sm font-semibold"
                  >
                    {tag}
                  </span>
                ))}
              </div>
              <a 
                href="#contact"
                class="inline-block bg-primary text-black px-6 py-3 rounded-lg font-semibold hover:bg-primary/80 transition-all duration-300"
              >
                View Case Study
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>