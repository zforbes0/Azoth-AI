---
// Blog Articles Preview component
import { Image } from 'astro:assets';

const blogArticles = [
  {
    title: "AI Document Management System",
    subtitle: "Intelligent Retrieval & Organization for Business",
    description: "Transform how your organization manages, retrieves, and organizes documents with cutting-edge artificial intelligence technology.",
    url: "/blog/ai-document-management-system",
    image: "https://images.unsplash.com/photo-1583521214690-73421a1829a9?crop=entropy&cs=srgb&fm=jpg&ixlib=rb-4.1.0&q=85&w=800&h=400",
    readTime: "15 min read",
    author: "Michael Rodriguez",
    publishedDate: "2025-01-10",
    category: "AI & Document Management",
    tags: ["AI", "Document Management", "Business Automation"]
  },
  {
    title: "RAG AI Document Retrieval",
    subtitle: "How Retrieval-Augmented Generation Transforms Knowledge Access",
    description: "Discover how RAG technology revolutionizes document search, making enterprise knowledge instantly accessible and contextually relevant.",
    url: "/blog/rag-ai-document-retrieval",
    image: "https://images.unsplash.com/photo-1675627453057-c56dc0502ffd?crop=entropy&cs=srgb&fm=jpg&ixlib=rb-4.1.0&q=85&w=800&h=400",
    readTime: "12 min read",
    author: "Sarah Chen",
    publishedDate: "2025-01-15",
    category: "AI Technology",
    tags: ["RAG", "AI", "Knowledge Management"]
  },
  {
    title: "Intelligent Document Retrieval Software",
    subtitle: "Features to Look For in 2025",
    description: "Essential features and capabilities for next-generation document retrieval systems that deliver real business value.",
    url: "/blog/intelligent-document-retrieval-software",
    image: "https://images.unsplash.com/photo-1538619727653-f7707682faf9?crop=entropy&cs=srgb&fm=jpg&ixlib=rb-4.1.0&q=85&w=800&h=400",
    readTime: "10 min read",
    author: "David Kim",
    publishedDate: "2025-01-12",
    category: "Software Reviews",
    tags: ["Software", "Enterprise", "Document Retrieval"]
  }
];
---

<section id="portfolio" class="relative pt-18 pb-32 mt-[25px] mb-[-121px]">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-20">
      <h2 class="text-5xl md:text-6xl font-orbitron font-black text-white mb-6">
        AI Integration/Automation <span class="text-primary matrix-text-shadow">Insights</span>
      </h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Expert insights and comprehensive guides on AI Integration, Automation, and Optimization
      </p>
    </div>

    <div class="space-y-16">
      {blogArticles.map((article, index) => (
        <a href={article.url} class="glass-morphism rounded-2xl overflow-hidden block hover:border-primary transition-all duration-300">
          <div class="grid md:grid-cols-2 gap-0">
            <div class="relative">
              <Image
                src={article.image}
                alt={article.title}
                width={800}
                height={300}
                class="w-full h-[300px] object-cover"
              />
              <div class="absolute bottom-4 left-4 text-white">
                <div class="bg-primary text-black px-3 py-1 rounded-lg font-orbitron font-bold text-xs">
                  {article.readTime}
                </div>
              </div>
            </div>

            <div class="p-8 flex flex-col h-[380px]">
              <!-- Category Badge -->
              <div class="mb-3">
                <span class="inline-block bg-primary/20 text-primary px-3 py-1 rounded-full text-sm font-medium">
                  {article.category}
                </span>
              </div>

              <h3 class="text-2xl font-orbitron font-bold text-primary mb-3">
                {article.title}
              </h3>
              <h4 class="text-lg font-semibold text-white mb-4">
                {article.subtitle}
              </h4>
              <p class="text-gray-300 mb-4 leading-relaxed flex-grow">
                {article.description}
              </p>

              <!-- Article Metadata -->
              <div class="mb-4 space-y-2">
                <div class="flex items-center justify-between text-sm text-gray-400">
                  <div class="flex items-center space-x-4">
                    <span class="flex items-center space-x-1">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 1V3H9V1L3 7V9H21M20 10H4V12H6V19A2 2 0 0 0 8 21H16A2 2 0 0 0 18 19V12H20V10Z"/>
                      </svg>
                      <span>By {article.author}</span>
                    </span>
                    <span class="flex items-center space-x-1">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,5V7H5V5H19M5,19V9H19V19H5Z"/>
                      </svg>
                      <span>{new Date(article.publishedDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                    </span>
                  </div>
                  <span class="text-primary font-medium">{article.readTime}</span>
                </div>
                
                <!-- Tags -->
                <div class="flex flex-wrap gap-2">
                  {article.tags.map(tag => (
                    <span class="inline-block bg-gray-800 text-gray-300 px-2 py-1 rounded text-xs">
                      #{tag}
                    </span>
                  ))}
                </div>
              </div>

              <!-- Read More Button -->
              <div class="mt-auto">
                <div class="flex items-center justify-between">
                  <div class="inline-flex items-center text-primary hover:text-[#01C060] transition-colors duration-300 font-semibold">
                    <span class="mr-2">Read Full Article</span>
                    <svg class="w-4 h-4 transform transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>