---
// Astro component - converted from React hero section
import { Image } from 'astro:assets';
import WireframeBackground from './WireframeBackground.astro';
---

<section class="relative min-h-screen flex items-start wireframe-bg overflow-hidden" style="padding-top: 4.5rem;">
  <WireframeBackground />
  <div class="relative z-10 max-w-7xl mx-auto px-6 py-8">
    <!-- Main Hero Grid Layout -->
    <div class="grid lg:grid-cols-2 gap-12 items-start min-h-[75vh]">
      
      <!-- Left Column: Hero Content -->
      <div class="text-center animate-slide-up relative" style="margin-top: -1.5rem;">
        <div class="mb-3">
          <!-- Combined logo with tagline -->
          <Image 
            src="/assets/NEXITAS circle Main.webp" 
            alt="Nexitas - Leading Automation & Development Agency" 
            width={525}
            height={315}
            class="mb-3 block mx-auto"
            style="width: 525px; height: auto; max-width: 90%;"
          />
        </div>
        
        <h1 class="text-3xl md:text-4xl font-orbitron font-bold text-white mb-3 leading-tight text-left">
          Transform Your Business with <span class="text-primary">AI-Powered Automation</span>
        </h1>
        
        <p class="text-lg text-gray-300 mb-8 leading-relaxed max-w-2xl text-left">
          Cutting-edge automation solutions, custom software development, and intelligent process optimization that delivers measurable ROI.
        </p>

        <div class="mb-4">
          <a
            href="#contact"
            class="inline-flex items-center bg-primary text-black px-6 py-3 rounded-xl font-orbitron font-bold text-base hover:bg-primary/80 transition-all duration-300 transform hover:scale-105 mx-auto"
          >
            Start Your Automation Journey 
            <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8.59 16.59L10 18l6-6-6-6-1.41 1.41L13.17 12l-4.58 4.59z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Column: Service Cards -->
      <div class="lg:pl-8">
        <h2 class="text-xl font-orbitron font-bold text-primary mb-6 text-left">Our Core Services</h2>
        
        <!-- Service Cards Grid -->
        <div id="services" class="grid gap-4">
          <div class="glass-morphism p-4 rounded-xl service-card">
            <div>
              <h3 class="text-xl font-orbitron font-bold text-primary mb-2">
                Process Automation
              </h3>
              <p class="text-gray-300 text-sm leading-relaxed">
                Streamline workflows with intelligent automation that eliminates manual tasks and accelerates operations.
              </p>
            </div>
          </div>

          <div class="glass-morphism p-4 rounded-xl service-card">
            <div>
              <h3 class="text-xl font-orbitron font-bold text-primary mb-2">
                Custom Software
              </h3>
              <p class="text-gray-300 text-sm leading-relaxed">
                Bespoke applications tailored to your business needs, built with scalable architecture and modern technologies.
              </p>
            </div>
          </div>

          <div class="glass-morphism p-4 rounded-xl service-card">
            <div>
              <h3 class="text-xl font-orbitron font-bold text-primary mb-2">
                AI Integration
              </h3>
              <p class="text-gray-300 text-sm leading-relaxed">
                Harness AI to automate decision-making, enhance customer experiences, and unlock new insights.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>