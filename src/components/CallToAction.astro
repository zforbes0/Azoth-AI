---
export interface Props {
  primaryText: string;
  primaryUrl: string;
  secondaryText?: string;
  secondaryUrl?: string;
  valueProp: string;
}

const { primaryText, primaryUrl, secondaryText, secondaryUrl, valueProp } = Astro.props;
---

<div class="bg-gradient-to-r from-primary/20 to-primary/10 border border-primary/30 rounded-xl p-8 text-center my-12">
  <h3 class="text-2xl font-orbitron font-bold text-primary mb-4">
    Ready to Get Started?
  </h3>
  <p class="text-lg text-white mb-6">
    {valueProp}
  </p>
  <div class="flex flex-col sm:flex-row gap-4 justify-center">
    <a href={primaryUrl} class="bg-primary text-black px-8 py-3 rounded-lg font-orbitron font-bold hover:bg-primary/90 transition-colors">
      {primaryText}
    </a>
    {secondaryText && secondaryUrl && (
      <a href={secondaryUrl} class="border border-primary text-primary px-8 py-3 rounded-lg font-orbitron font-bold hover:bg-primary/10 transition-colors">
        {secondaryText}
      </a>
    )}
  </div>
</div>