---
export interface Props {
  articles: Array<{
    title: string;
    url: string;
    excerpt: string;
    readTime: string;
    date: string;
  }>;
}

const { articles } = Astro.props;
---

<section class="bg-primary/10 border border-primary/30 p-6 rounded-xl mb-8">
  <h3 class="text-xl font-orbitron font-bold text-primary mb-6">Related Articles</h3>
  <div class="grid md:grid-cols-2 gap-6">
    {articles.map((article) => (
      <div class="bg-black/40 border border-primary/20 p-4 rounded-lg hover:border-primary/50 transition-all duration-300">
        <h4 class="font-orbitron font-bold text-white mb-2 text-lg leading-tight">
          <a href={article.url} class="text-primary hover:text-primary/80 transition-colors">{article.title}</a>
        </h4>
        <p class="text-gray-300 text-sm mb-3 leading-relaxed">{article.excerpt}</p>
        <div class="flex items-center justify-between text-xs text-gray-400">
          <span class="flex items-center gap-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
              <path d="M12.5 7H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
            </svg>
            {article.readTime}
          </span>
          <span class="flex items-center gap-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
            </svg>
            {article.date}
          </span>
        </div>
      </div>
    ))}
  </div>
</section>